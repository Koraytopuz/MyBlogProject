@model ToDoListDto
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">

        <h4 class="page-title">Görev İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Görev Girişi</h4>
                        <p class="card-subtitle mb-4">Görev güncelleme işlemlerini aşağıdaki panelden yapabilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <label for="Title">Başlık</label>
                        <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Başlık Giriniz">
                    </div>

                    <div class="form-group">
                        <label for="Date">Tarih</label>
                        <input type="date" class="form-control" id="Date" asp-for="Date" placeholder="Tarihi Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="Status">Durum</label>
                        <input type="datetime" class="form-control" id="Status" asp-for="Status" placeholder="Durum Bilgisi Giriniz">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Kullanıcıyı Güncelle</button>
                </form>

                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>