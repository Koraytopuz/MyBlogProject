@model List<ToDoListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacak Görev İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">

                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacak Görev alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
                        </div>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Date</td>
                                            <td>@item.Status</td>
                                            <td><a href="/Admin/AdminToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-outline-danger">Sil </a></td>
                                            <td><a href="/Admin/AdminToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-outline-success">Güncelle </a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminToDoList/CreateToDoList/" class="btn btn-outline-primary">Yeni Görev Alanı Girişi </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
