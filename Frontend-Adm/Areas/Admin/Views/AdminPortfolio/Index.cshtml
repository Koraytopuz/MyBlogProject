@model List<ResultPortfolioDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	int count = 0;	
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Portfolyo İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">

					<div class="card-body">
						<div class="card-sub">
							Portfolyo alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Image Url</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;	
									<tr>
										<td>@count</td>
										<td>@item.ImageUrl</td>
										<td>@item.Description</td>
										<td><a href="/Admin/AdminPortfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/AdminPortfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/AdminPortfolio/CreatePortfolio/" class="btn btn-outline-primary">Yeni Portfolyo Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

