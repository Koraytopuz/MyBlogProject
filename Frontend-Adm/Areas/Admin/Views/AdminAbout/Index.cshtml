@model List<AboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Detay</th>
									<th scope="col">Doğum Günü</th>
									<th scope="col">Yaş</th>
									<th scope="col">Mail</th>
									<th scope="col">Telefon</th>
									<th scope="col">Konum</th>
									<th scope="col">Derece</th>
									<th scope="col">Github</th>
									<th scope="col">ImageUrl</th>
									<th scope="col">Status</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Details</td>
										<td>@item.Birthday</td>
										<td>@item.Age</td>
										<td>@item.Email</td>
										<td>@item.Phone</td>
										<td>@item.Location</td>
										<td>@item.Degree</td>
										<td>@item.WebUrl</td>
										<td>@item.ImageUrl</td>
										<td>@item.Status</td>
										<td><a href="/Admin/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımda Yazısı Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
