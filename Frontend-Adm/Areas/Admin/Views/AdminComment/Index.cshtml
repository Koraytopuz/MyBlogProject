@model List<CommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 0;  
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">

                    <div class="card-body">
                        <div class="card-sub">
                            Yorumlar alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kullanıcı Adı </th>
                                        <th>Yorum</th>
                                        <th>Mail</th>
                                        <th>Tarih</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Text</td>
                                            <td>@item.Mail</td>
                                            <td>@(((DateTime)item.CreatedAt).ToString("dd-MMM-yyyy"))</td>
                                            <td><a href="/Admin/AdminComment/DeleteComment/@item.Id" class="btn btn-outline-danger">Sil </a></td>
                                            <td><a href="/Admin/AdminComment/UpdateComment/@item.Id" class="btn btn-outline-success">Güncelle </a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminComment/CreateComment/" class="btn btn-outline-primary">Yeni Kullanıcı Girişi </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



