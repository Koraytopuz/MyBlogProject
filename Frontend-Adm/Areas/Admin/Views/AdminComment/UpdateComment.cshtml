@model CommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Güncelleme</h4>
                        <p class="card-subtitle mb-4">Yorum güncelleme işlemlerini aşağıdaki panelden yapabilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Kullanıcı Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Kullanıcı Adını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputText">Yorum</label>
                                <input type="text" class="form-control" id="exampleInputText" asp-for="Text" placeholder="Yorumu Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputMail">Mail</label>
                                <input type="email" class="form-control" id="exampleInputMail" asp-for="Mail" placeholder="Mail Adresi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCreatedAt">Tarih</label>
                                <input type="date" class="form-control" id="exampleInputCreatedAt" asp-for="CreatedAt" placeholder="Tarihi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yorumu Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

