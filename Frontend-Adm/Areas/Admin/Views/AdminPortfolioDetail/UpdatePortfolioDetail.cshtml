@model ResultPortfolioDetailDto
@{
    ViewData["Title"] = "UpdatePortfolioDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolyo Detay İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Portfolyo Detay Güncelleme</div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ProjectTitle">Proje Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProjectTitle" id="ProjectTitle">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Detail">Detay Giriniz</label>
                                <input type="text" class="form-control" asp-for="Detail" id="Detail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="BigImageUrl">Image Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="BigImageUrl" id="BigImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ProjectUrl">Proje Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProjectUrl" id="ProjectUrl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Portfolyo Detay Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
