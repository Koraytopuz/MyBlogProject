@model UserDto
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <h4 class="page-title">Kullanıcı İşlemleri</h4>
            <div class="col-md-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Kullanıcı Girişi</h4>
                        <p class="card-subtitle mb-4">Yeni Kullanıcı girişini aşağıdaki panelden yapabilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Kullanıcı Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="UserName" placeholder="Kullanıcı Adını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputMail">Mail</label>
                                <input type="email" class="form-control" id="exampleInputMail" asp-for="Mail" placeholder="Mail Adresi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kullanıcıyı Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>